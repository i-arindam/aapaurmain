.modal {
  display: block;
  position: relative;
  top: 0;
  margin-top: -160px;
  margin-bottom: 100px;
}
/* Modal for login */
#ls-modal {
  background: #E9E8E8;
  width: 70%;
  left: 36%;
}
#ls-modal .modal-header {
  background: #333;
  color: #fff;
}
#ls-modal .modal-header a.close {
  color: #fff;
  border: 1px solid #fff;
  border-radius: 50%;
  padding: 3px;
}
#ls-modal .signup-form h3 {
  border-bottom: 1px solid #000;
}
#ls-modal form label.error {
  font-size: 12px;
  padding: 0;
}
.ls-container {
  position: relative;
  color: #000;
}
.l-container {
  float: left;
  border-right: 1px solid #aaa;
}
.s-container {
  float: right;
}
.ls-container form input[type=text],
.ls-container form input[type=password] {
  width: 193px;
}
.ls-container .conditions label,
.ls-container .signup-form h3 {
  color: #000;
}
.ls-container .conditions a {
  color: #005580;
}
.l-container button.signin {
  width: 455px;
  padding: 10px 30px;
  font-size: 15px;
  position: relative;
  left: 3%;
  margin-top: 15px;
}
.l-container .control-group {
  margin-bottom: 0;
}
.l-container .controls a {
  margin-left: 20px;
}
.s-container .conditions label {
  font-family: 'lucida_sansregular', Arial, Helvetica, sans-serif;
  font-size: 16px;
}
.ls-container .login-error {
  background: #f2dede;
  border: 1px solid #eed3d7;
  color: #b94a48;
  padding: 10px;
  margin-bottom: 10px;
  border-radius: 4px;
  overflow: hidden;
}

/* One story signup */
.one-story.container {
  margin-bottom: 20px;
}
.signup-form {
  width: 470px;
  margin: 0 15px 0 0;
}
.signup-form h3 {
  border-bottom: 1px solid rgba(255, 255, 255, 0.54);
  color: #fff;
  float: right;
  font-family: 'voltaireregular', helvetica neue, arial, sans-serif;
  font-size: 20px;
  margin: 0 0 27px;
  padding: 0 0 19px;
  text-align: center;
  text-shadow: 0 1px 1px #000;
  width: 455px;
}
.signup-form input[type=text], 
.signup-form input[type=password] {
  background: #fff;
  border: 0;
  box-shadow: 0 1px 1px #555;
  height: 30px;
  margin: 0 0 20px 15px;
  padding-left: 11px;
  width: 203px;
}
.conditions {
  width: 455px;
  float: right;
  margin: 0px 0 15px;
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.43);
}
.conditions label {
  color: #fff;
  cursor: pointer;
  font-family: 'voltaireregular', sans-serif;
  font-size: 15px;
}
.conditions input {
  margin: 0 10px 0 0;
  height: 16px;
}
.conditions a {
  color: #00B4C4;
}
.signupBtn {
  float: right;
  padding: 10px 30px;
  width: 455px;
}
.span7.signupDiv {
  position: relative;
  left: 25%;
  margin: 20px 20px 50px 20px;
  padding-top: 25px;
}  
.signupDiv p {
  position: relative;
  left: 35%;
  padding-bottom: 5%;
  font-size: 24px;
  color: #fff;  
}
.logged-out .col-two {
  border: none;
}
#validation-errors {
  background: rgb(255, 240, 160);
  border-radius: 4px;
  display: none;
  float: right;
  margin: 0 0 20px;
  padding: 10px;
  width: 435px;
  transition: 0.5s ease-in;
  transition-delay: 1s;
}
form label.error {
  color: #FF5200;
  font-style: italic;
  padding-top: 3px;
}
