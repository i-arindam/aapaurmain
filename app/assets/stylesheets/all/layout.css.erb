/* universal */

html {
  overflow-y: scroll;
}

body {
  padding-top: 90px;
}

section {
  overflow: auto;
}

textarea {
  resize: vertical;
}

.betaImg {
  position: absolute;
  left: 0;
  top: 0;
}

div.alert.alert-info,
div.alert.alert-error,
div.alert.alert-success,
div.alert.alert-notice {
  width: 80%;
  position: relative;
  left: 10%;
  top: 10%;
}

.center {
  text-align: center;
}

.center h1 {
  margin-bottom: 10px;
}

/* typography */

h1, h2, h3, h4, h5, h6 {
  line-height: 1;
}

h1 {
  font-size: 3em;
  letter-spacing: -2px;
  margin-bottom: 30px;
  text-align: center;
}

h2 {
  font-size: 1.7em;
  letter-spacing: -1px;
  margin-bottom: 30px;
  text-align: center;
  font-weight: normal;
  color: #999;
}

p {
  font-size: 1.1em;
  line-height: 1.7em;
}

/* header */

header {
  height: 60px;
}

.navbar-inner {
  background: black;
  height: inherit;
  padding-top: 10px;
}

header .navbar-inner .container {
  width: 1110px;
}

.rememberSection {
  position: relative;
  left: 160px;
  
}



.inputFields {
  background: #cfcfcf; /* Old browsers */
  background: -moz-linear-gradient(top, #cfcfcf 0%, #c3c3c3 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#cfcfcf), color-stop(100%,#c3c3c3)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top, #cfcfcf 0%,#c3c3c3 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top, #cfcfcf 0%,#c3c3c3 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top, #cfcfcf 0%,#c3c3c3 100%); /* IE10+ */
  background: linear-gradient(to bottom, #cfcfcf 0%,#c3c3c3 100%); /* W3C */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#cfcfcf', endColorstr='#c3c3c3',GradientType=0 ); /* IE6-9 */
  width: 170px;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  -ms-border-radius: 4px;
  -o-border-radius: 4px;
  border-radius: 4px;
}

#logo {
  float: left;
  width: 97px;
  height: 130px;
  margin-right: 10px;
  position: relative;
  top: -25px;
  background-image: url('<%= image_path "logo-chota.png" %>') !important;
  margin-left: -50px;
}

/* footer */

footer {
 background: black;
 color: white;
}

footer a {
  color: #555;
}  

footer small {
  float: left;
}

footer ul {
  float: right;
  list-style: none;
}

footer ul li {
  float: left;
  margin-left: 10px;
}

.footer {
  height: 30px;
}

/* Section Elements */

#box_content {
  width: 65%;
  float: left;
  left: 200px;
  border-radius: 10px;
  padding: 10px;
  color: #fff;
  margin-bottom: 30px;
  padding-bottom: 30px;
}
#left_content {
  width: 13%;
  float: left;
}
#right_content {
  width: 16%;
  float: right;
}

.profileImage {
  float: left;
  height: 200px;
  width: 200px;
  margin-left: 130px;
  margin-top: 20px;
  text-align: center;
}

.profileImage div {
  height: 180px;
  width: 200px;
  background-color: white;
}

.profileActions {
  padding-top: 12px;
}

.profileIntro {
  border-radius: 5px;
  overflow: hidden;
  padding: 25px 5px 10px 30px;
}

.profileImageSmall {
  float: left;
  height: 150px;
  width: 150px;
  margin-left: 30px;
  margin-top: 20px;
  text-align: center;
}

.profileImageSmall div {
  height: 120px;
  width: 120px;
  background-color: white;
}

.profileActionsSmall {
  padding-top: 4px;
}

.profileIntroSmall {
  border-radius: 5px;
  overflow: hidden;
  padding: 15px;
  font-size: 0.7em;
}

.bioSection {
  text-align: left;
}

.shortBio {
  font-style: italic;
  font-weight: normal;
  margin-bottom: 30px;
}

.name {
  letter-spacing: 0px;
  text-align: left !important;
  margin-bottom: 10px !important;
}

.row label.span2 {
  font-size: 14px;
  font-weight: bold;
}

#bodyContainer {
  height: 100%;
}

#content { 
  padding-bottom: 3em; 
}

html, body {
  height: 100%;
}

.wrapper {
  min-height: 100%;
  height: auto !important;
  height: 100%;
  margin: 0 auto -142px; /* the bottom margin is the negative value of the footer's height */
}

.footer, .push {
  height: 142px; /* .push must be the same height as .footer */
}

input.search-bar {
  height: 30px;
  width: 280px;
  margin-left: 0;
  border-radius: 5px;
}

.advSearch{
  float: left;
  margin-left: 333px;
  margin-top: -70px;
  text-decoration: none;
}

.advSearch:hover {
  text-decoration: none;
}

span.orText {
  position: relative;
  top: -40px;
  left: 302px;
  font-size: 19px;
}

.nav-pills.nav-actions {
  margin-left: 45px;
  margin-top: 15px;
  font-size: 15px;
}

.nav-pills.nav-actions li>a:hover {
  color: #A52A2A;
}

.nav.nav-dropdown{
  margin-left: 400px;
  margin-top: -20px;
  font-size: 15px;
}

.footer-content{
  width: 96%;
  max-width: 900px;
  margin: 0 auto;
  overflow: visible;
}

.three-col{
  padding-top: 10px;
  overflow: hidden;
}

.col1 , .col2  {
  display: inline;
  float: left;
  width: 30%;
  padding: 0 1.667%;
}

.three-col ul > li {
  padding: 5px 5px 5px 5px;
  border-radius: 5px;
  
}

.col3 {
  display: inline;
  float: left;
  width: 16%;
}

.footer a {
  color: white;
  text-decoration: none;
}

.footer ul li:nth-child(1):hover {
  background-color: #FFA500;
}

.footer ul li:nth-child(2):hover {
  background-color: #8A2BE2;
}

.footer ul li:nth-child(3):hover {
  background-color: #008000;
}

@font-face {
  font-family: 'Dancing Script';
  font-style: normal;
  font-weight: 400;
  src: local('Dancing Script'), local('DancingScript'), url("<%= asset_path '/assets/fonts/dancing script.woff' %>") format('woff');
} 

.flash-error{
  width: 80%;
  margin-left: 10%;
  padding: 10px;
  border-radius: 6px;
}
.modal-body{
  background-color: rgba(238, 238, 87, 0.75);
  font-size: 14px;
  font-weight: 700;
}
.modal-footer{
  background-color:#A3C08F;
}

.uneditable-input {
  pointer-events: none;
}
