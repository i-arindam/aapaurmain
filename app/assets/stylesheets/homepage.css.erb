body {
  background: url('<%= image_path "/assets/home-bg.jpg" %>') center top repeat;
  background-size: cover;
}
.container {
  width: 100%; /*940px;*/
  margin-left: 150px;
}
.container .row {
  margin-left: -20px;
}
/* center text */
.homepage-content {
  position: relative;
}
.fb-like-box {
  left: 6%;
  background: #333;
}
.container .row .span7 {
  margin-left: -50px;
}
.header {
  margin-bottom: 100px;
}
ul.text-dialog {
  padding: 27px 0 0;
}
.text-dialog li {
  color: #fff;
  display: block;
  font-family: 'voltaireregular', helvetica neue, arial, sans-serif;
  font-size: 100px;
  height: 113px;
  line-height: 49px;
  text-shadow: 0 1px 1px #000;
  text-transform: uppercase;
}
.tag-line {
  background: rgba(0, 0, 0, 0.73);
  clear: both;
  color: white;
  font-family: 'voltaireregular', helvetica neue, arial, sans-serif;
  font-size: 26px;
  letter-spacing: 1px;
  line-height: 19px;
  margin: 50px 0 0;
  padding: 30px 0;
}
.highlight {
  padding: 5px 13px;
  margin: 0 8px;
}
.highlight.interact {
  background: #2b457a;
}
.highlight.discover {
  background: #546802;
}
.highlight.bond {
  background: #773114;
}
/* text section ends */

/*Social Actions*/
.socialActions {
   background: rgba(0, 0, 0, 0.48);
  -moz-border-radius: 5px;
  -ms-border-radius: 5px;
  -webkit-border-radius: 5px;
  border-radius: 0 5px 5px 0;
  border: 1px solid rgb(0, 0, 0);
  left: 0px;
  list-style: none;
  margin: 0;
  overflow: hidden;
  padding: 15px 10px;
  position: absolute;
  top: 222px;
  width: 60px;
}

.socialActions li {
  color: #333;
  float: right;
  line-height: 1;
  margin: 0 0 15px;
  vertical-align: top;
}

.socialActions .social-fb {
  margin-right: 6px;
}

.socialActions .social-fb .fb-like > span {
  width: 48px !important;
}

.socialActions .social-tw {
  margin-right: 2px;
}

.socialActions .social-li {
  margin-top: -11px;
}

.socialActions .social-go {
  margin-right: 4px;
}

.socialActions .social-go > div {
  height: 20px !important;
}

.socialActions .social-pi {
  margin-bottom: 0;
  margin-right: 8px;
}

.socialActions li div,
.socialActions li iframe {
  vertical-align: top !important;
}

.socialActions .fb-like {
  float: left !important;
}

.IN-widget span,
span.IN-widget span:first-child {
  vertical-align: top !important;
}
/* Social Actions End*/

@font-face {
  font-family: 'Dancing Script';
  font-style: normal;
  font-weight: 400;
  src: local('Dancing Script'), local('DancingScript'), url("<%= asset_path '/assets/fonts/dancing script.woff' %>") format('woff');
}


/* login - signup */
.login label.checkbox {
  position: relative;
  top: 5px;
}
.login button.btn {
  position: relative;
  left: 170px;
}
.signup {
  overflow: hidden;
}
.signup-form {
  width: 470px;
  margin: 0 15px 0 0;
}
.signup-form h3 {
  border-bottom: 1px solid rgba(255, 255, 255, 0.54);
  color: white;
  float: right;
  font-family: 'voltaireregular', helvetica neue, arial, sans-serif;
  font-size: 20px;
  margin: 0 0 27px;
  padding: 0 0 19px;
  text-align: center;
  text-shadow: 0 1px 1px #000;
  width: 455px;
}
.signup-form input[type=text], .signup-form input[type=password] {
  background: white;
  border: 0;
  box-shadow: 0 1px 1px #555;
  height: 30px;
  margin: 0 0 20px 15px;
  padding-left: 11px;
  width: 203px;
}
.signup img{
  margin-top: 78px;
  margin-left: 17px;
}
.signupBtn {
  float: right;
  padding: 10px 30px;
  width: 455px;
}
.signupError {
  float: right;
  position: relative;
  right: 60px;
  width: 310px;
  top: 30px;
  list-style: none;
  list-style-type: none;
}
.signupError ul {
  list-style-type: none;
  padding-top: 10px;
}
.signupError h2 {
  margin-bottom: 2px;
}
input.span3{
  border-radius: 0 10px 10px 0;
}
.control-group{
  padding: 30px 17px 20px 30px;
  border-radius: 10px;
  color: #000;
}
.control-group .joinus{
  font-size: 30px;
  text-align: center;
  margin-bottom: 26px;
}
.controls div.input-prepend span.add-on{
  border-radius: 10px 0 0 10px;
}
.controls .input-prepend{
  margin-bottom: 12px;
}
.conditions {
  width: 455px;
  float: right;
  margin: 0px 0 15px;
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.43);
}
.conditions label {
  color: #fff;
  cursor: pointer;
  font-family: 'voltaireregular', sans-serif;
  font-size: 15px;
}
.conditions a {
  color: #00B4C4;
}
.conditions input {
  margin: 0 10px 0 0;
  height: 16px;
}
/* Validations */
#validation-errors {
  background: rgb(255, 240, 160);
  border-radius: 4px;
  display: none;
  float: right;
  margin: 0 0 20px;
  padding: 10px;
  width: 435px;
  transition: 0.5s ease-in;
  transition-delay: 1s;
}
form label.error {
  color: #FF5200;
  font-style: italic;
  padding-top: 3px;
}
/* login ends */

