/* content layout */
.container {
  margin: 0;
  width: 100%;
}
.row-fluid .span9 {
  width: 78.4%;
}
.row-fluid .span3 {
  width: 21.6%;
  margin: 0;
}
.col-one {
  float: left;
  width: 25.5%;
  padding: 77px 0 0 0;
}
.col-two {
  margin-left: 25.5%;
  border-left: 2px solid #ededed;
  background: #f9f7f8;
  overflow: hidden;
}
/* layout Ends */

/* slider */
.slider-box {
  border-radius: 5px;
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
  padding: 15px;
  background: #f0f0f0;
}
.user-box, .user-inform, .text-blk {
  float: left;
}
.blog-box {
  width: 38%;
}
.blog-box {
  float: right;
}
.blg-tit {
  font-size: 12px;
  color: #4e4b4a;
}
.blg-ct {
  color: #7c7c7c;
  font-size: 11px;
}
.user-box img {
  width: 100% !important;
  height: auto !important;
}
.box-contents {
  width: 59%;
  margin: 0 2% 0 0;
  float: left;
}
.user-box {
  background: #fff;
  border: 1px solid #c3c3c3;
  padding: 10px 13px 20px;
  border-radius: 5px;
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
}
.box-contents:after {
  content: ".";
  display: block;
  clear: both;
  visibility: hidden;
  line-height: 0;
  height: 0;
}
.user-inform {
  width: 40%;
  margin: 118px 0 0;
  text-align: center;
}
.user-inform p {
  color: #262626;
  font-size: 13px;
  font-family: 'lucida_sansdemibold_roman';
}
.text-blk {
  margin: 0 0 0 3%;
  width: 57%;
}
.profile-bg {
  position: absolute;
  top: -1px;
  left: 26px;
  width: 89px;
  padding: 30px 16px 13px 8px;
  background: url("<%= image_path 'users/profile-bg.png' %>") no-repeat;
}
.text-blk p {
  color: #4e4b4a;
  font-style: italic;
  font-size: 13px;
}
.blog-box h3 {
  color: #4e4b4a;
  font-size: 14px;
  font-family: 'lucida_sansdemibold_roman';
  text-transform: uppercase;
}
.blog-box ul li {
  padding: 7px 4px;
  border-bottom: 1px solid #ccccc6;
}
.blog-box ul li.last {
  border: none;
}
.btn-wraper {
  margin: 20px 0 0 0;
}
.button {
  display: block;
  border-right: 1px solid #edecec;
  border-bottom: 1px solid #edecec;
  color: #fff;
  font-size: 12px;
  font-family: 'lucida_sansdemibold_roman';
  box-shadow: 1px 1px #b6b6b6;
  border-radius: 1px;
  -moz-border-radius: 1px;
  -webkit-border-radius: 1px;
  background: #8f8c89;
}
.button:hover {
  color: #fff;
}
.btn-wraper a {
  float: left;
  margin: 0 13px 0 0;
  width: 136px;
}
.send-req, .follow-user, .rate-profile {
  background: url("<%= image_path 'sprite_layout.png' %>") no-repeat 9px -200px;
  display: block;
  padding: 8px 0 8px 28px;
}
.follow-user {
  background-position: 9px -230px;
  padding-left: 40px;
}
.rate-profile {
  background-position: 4px -260px;
  padding-left: 34px;
}
/* slider ends */

/* right bar */
.rit-content {
  padding: 77px 20px 0;
}
.tit-wrap {
  background: #e9e8e8;
  border-bottom: 1px solid #cac9c9;
  padding: 12px 8px;
  margin: 0 0 13px;
}
.tit-wrap h2 {
  color: #444242;
  font-size: 16px;
}
.board-tit {
  background: url("<%= image_path 'sprite_layout.png' %>") no-repeat 0 -570px;
  padding: 7px 0 7px 37px;
}
.board-wrap {
  margin: 0 0 28px;
}
.board-wrap ul {
  margin: 0 0 0 47px;
}
.board-wrap ul li {
  margin: 0 0 16px 0;
}
.datas {
  font-size: 13px;
  color: #696a68;
}
.shared-by {
  color: #434343;
  font-size: 13px;
  font-family: 'lucida_sansdemibold_roman';
  margin: 0 0 10px;
}
.user-left {
  float: left;
  margin: 0 9px 0 0;
  width: 32px;
}
.user-left img, .comment-user img {
  width: 100%;
  border-radius: 3px;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
}
.qn-right {
  float: left;
  width: 77%;
}
.qa-wrap ul li {
  overflow: hidden;
  margin: 0 0 20px;
}
.qa-wrap {
  position: relative;
}
.new-label {
  position: absolute;
  right: 0;
  top: -1px;
}
.questions-loader, .panels-loader, .top-stories-loader {
  min-height: 240px;
  padding: 10px;
}
/* right bar ends */

.center-container {
  padding: 16px 32px;
}


/* Feeds */
.feeds-container {
  margin: 61px 0 30px 50px;
}
.feeds-wrap {
  background: #f5f4f5;
  border: 1px solid #cfcfcf;
  padding: 21px 33px;
  border-radius: 3px;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
  width: 90%;
  position: relative;
  margin: 0 0 30px;
}
.feeds-box {
  width: 96%;
  height: 30px;
  background: #fff;
  padding: 7px 12px;
}
.feeds-lbl {
  color: #B3B3B3;
  font-size: 13px;
  left: 48px;
  position: absolute;
  top: 31px;
}
.feed-btns a {
  float: left;
  margin: 0 2.5%;
  width: 27.4%;
}
.btn span.active-feed {
  background-position: 7px -662px;
}
.btn span.short-feed {
  background-position: 7px -694px;
}
.btn span.loc-feed {
  background-position: 7px -725px;
}
.qa-content {
  padding: 77px 20px 0;
}
/* Feeds Ends */
