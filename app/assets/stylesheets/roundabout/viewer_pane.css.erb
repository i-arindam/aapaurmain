.viewerPane 	{
  background-color: rgba(150, 150, 150, 0.5);
  clear: both;
  height: 387px;
  overflow: hidden;
  border-radius: 10px;
  -moz-border-radius: 10px;
  box-shadow: 10px 10px 10px rgba(0,0,0,0.4);
  -moz-box-shadow: 10px 10px 10px rgba(0,0,0,0.4);
}

.user-info {
  width: 260px;
  height: 260px;
  float: left;
  position: relative;
  margin: -35px;
  background: #111123;
  border-radius: 5px;
  border: 1px solid #DAD9D3;
  color: white;
}

.roundabout-holder {
   list-style: none;
   padding: 20px;
   margin: 0;
   height: inherit;
   width: 450px;
   background: black;
   position: relative;
   left: 240px;
   top: 46px;
}
.roundabout-moveable-item {
   height: inherit;
   width: inherit;
   cursor: pointer;
   background-color: #f5f5f5;
   border: 1px solid #999;
   color: black;
}
.roundabout-in-focus {
   cursor: auto;
   background: #f5f5f5;
}
body{
  background-image: url("<%= image_path 'web-texture-blue.jpg' %>");
}
.imageContainer{
  width: 96px;
  float: left;
}
.name{
  position: relative;
  left: 22px;
  top: 5px;
}
.name h2{
  letter-spacing: 1px;
  text-align: left;
  font-weight: bold;
  color:  black;
}
.user-info{
  padding-top: 15px;
  padding-right: 15px;
  padding-left: 15px;
  background-color: rgba(1, 10, 20, 0.9);
  border: none;
  color: white;
  border-radius: 10px;
  height: 341px;
}
.user-info:not(.roundabout-in-focus) .bio .bio-details{
  display: none;
}
.user-info:not(.roundabout-in-focus) .pull-left{
  display: none;
}
.bio-details{
  margin-top: 20px;
}
.bio-details .span2{
  margin-left: 0px;
}
.bio-details div{
  float: left;
  clear: both;
  padding-top: 10px;
}
.name h2{
  letter-spacing: 1px;
  text-align: left;
  font-weight: bold;
  color:  white;
}
.viewerPane.hide{
  background-color: black;
}
.footer{
  display: none;
}
.user-container.roundabout-holder{
  background-color: transparent;
}

label.value {
  width: 320px;
  margin-left: 140px;
  font-weight: 700;
  font-family: "comic sans ms";
}

label.span2 {
  font-family: 'Oregano' cursive;
  font-weight: 700;
  font-size: 15px;
}

.shortProfile .userBio {
  font-family: 'Times New Roman';
  font-weight: normal;
}
