.center-container {
  position: relative;
  left: 10%;
  width: 70%;
}
.accordion {
  position: relative;
}
.accordion-group {
  margin-bottom: 12px;
  background: #B2BAC4;
}
.accordion-heading {
  background: #578383;
  padding: 15px;
}
.accordion-heading a.accordion-toggle {
  color: #000;
  font-size: 18px;
  padding: 5px 0 5px 0;
}
.accordion-inner {
  font-size: 16px;
  line-height: 1.5em;
  color: #000;
}
.smaller-text .accordion-inner {
  font-size: 14px;
}
.close-box {
  width: 20px;
  margin-right: 10px;
  border: 2px solid #333;
  border-radius: 50%;
  position: relative;
  top: 5px;
}
.show-lis ul {
  list-style: disc;
  padding-left: 20px;
}
