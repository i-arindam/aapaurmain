body {
  background: url('<%= image_path "/assets/denim-bg.png" %>');
}
.center-container {
  position: relative;
  left: 10%;
  width: 70%;
}
.accordion {
  position: relative;
}
.accordion-group {
  margin-bottom: 12px;
  background: #5783B3;
}
.accordion-heading {
  background: #578383;
  padding: 15px;
}
.accordion-heading a.accordion-toggle {
  color: #000;
  /*text-decoration: none;*/
  font-size: 18px;
  padding: 5px 0 5px 0;
}
.accordion-inner {
  font-size: 16px;
  line-height: 1.5em;
  color: #444;
}
