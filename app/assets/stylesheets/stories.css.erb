/* Story */
.story-container li {
  margin: 0 0 30px;
}
.story-container li:after {
  content: ".";
  display: block;
  clear: both;
  visibility: hidden;
  line-height: 0;
  height: 0;
}
.story-user-wrap {
  float: left;
  width: 35px;
  margin: 0 16px 0 0;
}
.story-user img {
  width: 100%;
}
.story-content {
  float: left;
  width: 92.5%;
}
.story-tit {
  position: relative;
  background: #dcdbda;
}
.arrow-left {
  background: url("<%= image_path 'sprite_layout.png' %>") no-repeat scroll 0 -628px;
  height: 21px;
  position: absolute;
  left: -10px;
  top: 12px;
  width: 18px;
}
.paper-roll {
  background: url("<%= image_path 'sprite_layout.png' %>") no-repeat scroll -48px 0 #F9F7F8;
  height: 21px;
  position: absolute;
  right: 0;
  top: 0;
  width: 18px;
}
.story-tit {
  padding: 16px 25px;
}
.story-tit h3 {
  color: #444242;
  font-size: 16px;
  float: left;
}
.story-tit p {
  color: #7c7c7c;
  font-size: 12px;
  float: right;
}
.story-inner {
  background: #f0f0ef;
}
.story {
  padding: 12px 25px;
}
.story-img {
  float: left;
  width: 87px;
  margin: 0 14px 0 0;
}
.story-img img {
  width: 100%;
}
.story-text {
  color: #000;
  float: left;
  font-size: 14px;
  width: 83%;
}
.like-area {
  background: #e4e4e3;
  padding: 10px 25px;
  color: #7c7c7c;
}
.like-area span {
  display: block;
  float: left;
  padding: 6px 22px 0 7px;
}
.link-like, .link-dislike, .comment-count {
  float: left;
  background: url("<%= image_path 'sprite_layout.png' %>") no-repeat 0 0;
  display: block;
}
.comment-count {
  background-position: -48px -24px;
  padding: 5px 0 2px 25px;
  height: 21px;
}
.comment-count-wrap {
  float: right;
}
.link-like, .link-like-comment {
  background-position: -50px -52px;
  height: 23px;
  width: 18px;
}
.link-dislike, .link-dislike-comment {
  background-position: -50px -84px;
  height: 23px;
  width: 18px;
}
.comment-area {
  padding: 17px 25px;
}
.link-like-comment, .link-dislike-comment {
  float: left;
  background: url("<%= image_path 'sprite_layout.png' %>") no-repeat 0 0;
  display: block;
}
.comment-link {
  background: url("<%= image_path 'users/arrow-sprite.png' %>") no-repeat scroll right 5px;
  padding: 0 25px 0 0;
  color: #444242;
  font-size: 14px;
  font-family: 'lucida_sansdemibold_roman';
}
.comment-link.active {
  background-position: right -8px;
}
.comment-area ul {
  margin: 10px 0 0 0
}
.comment-area ul li {
  margin: 0 0 10px;
  padding-bottom: 10px;
  border-bottom: 1px #000 dotted;
}
.comment-user {
  float: left;
  margin: 0 17px 0 0;
  width: 48px;
}
.comment-user img {
  width: 100%;
  border-radius: 3px;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
}
.comment {
  float: left;
  width: 89%;
}
.comment-prsn {
  margin: 0 0 15px;
}
.comment-prsn p {
  font-size: 14px;
  float: left;
}
.comment-prsn span {
  font-size: 12px;
  float: right;
  color: #969695;
}
.comment-wrap {
  position: relative;
}
.comment-box, .feeds-box {
  background: #f8f8f8;
  border: 1px solid #c9c9c6;
  border-radius: 3px;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  -ms-border-radius: 3px;
  -o-border-radius: 3px;
  box-shadow: none;
  color: #000;
  font-size: 13px;
  resize: none;
  width: 95%;
  margin: 0;
  padding: 12px;
}
.comment-box:focus, .feeds-box:focus {
  border-radius: none;
  box-shadow: none;
  border: 1px solid #c9c9c6;
}
.submit-comment {
  margin: 10px 10px 10px;
  position: relative;
  left: 87%;
}
.cmt-lbl {
  position: absolute;
  top: 13px;
  left: 12px;
  color: #b3b3b3;
  font-size: 13px;
}
.comment-box {
  height: 34px;
}
.comment-text {
  width: 80%;
  float: left;
}
.comment-like-area {
  float: right;
  width: 15%;
}
/* Story end */
