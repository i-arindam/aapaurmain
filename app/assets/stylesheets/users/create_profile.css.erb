button.saveBasicDetails {
  position: relative;
  left: 40%;
  top: 20px;
  background-color: hsl(171, 60%, 14%) !important;
  background-repeat: repeat-x;
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#94e4d8", endColorstr="#0e3932");
  background-image: -khtml-gradient(linear, left top, left bottom, from(#94e4d8), to(#0e3932));
  background-image: -moz-linear-gradient(top, #94e4d8, #0e3932);
  background-image: -ms-linear-gradient(top, #94e4d8, #0e3932);
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #94e4d8), color-stop(100%, #0e3932));
  background-image: -webkit-linear-gradient(top, #94e4d8, #0e3932);
  background-image: -o-linear-gradient(top, #94e4d8, #0e3932);
  background-image: linear-gradient(#94e4d8, #0e3932);
  border-color: #0e3932 #0e3932 hsl(171, 60%, -1%);
  color: #fff !important;
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.99);
  -webkit-font-smoothing: antialiased;
  font-weight: 700;
}

.prioritiesContainer {
  position: relative;
  background: rgba(77, 121, 199, 0.38);
  width: 93%;
  padding: 30px;
  border-radius: 10px;
  margin-top: 30px;  
}

.prioritiesHeader, .prioritiesHelper {
  margin-bottom: 10px;
}

ul.prioritiesList {
  margin: 0;
  position: relative;
  left: -30px;
}

li.priority:nth-child(odd) {
  float: left;
}
li.priority:nth-child(even) {
  float: right;
}

li.priority {
  margin: 10px 0 20px 30px;
  border-radius: 6px;
  list-style-type: none;
  width: 45%;
  height: 130px;
  border: 1px solid black;
  background-color: #222;
  background: -webkit-gradient(linear,left top,left bottom,from(#555),to(#222));
  background: -moz-linear-gradient(top,#555,#555);
  padding: 9px 15px;
  color: white !important;
  -webkit-box-shadow: 0 1px 0px rgba(255, 255, 255, .25);
  -moz-box-shadow: 0 1px 0px rgba(255, 255, 255, .25);
  box-shadow: 0 1px 0px rgba(255, 255, 255, .25);
}

.btn-priority {
  width: 210px;
  font-weight: 700;
  font-size: 14px;
  padding: 0;
  border-radius: 10px;
  height: 35px;
  line-height: 30px;
  margin-left: 30px;
}

li.priority .priorityValue {
  display: none;
  width: 95%;
  padding: 5px 5px 5px 15px;
  border-radius: 7px;
  height: 40px;
  position: relative;
  top: 10px;
  font-size: 16px;
  border: 2px inset black;
  resize: none;
}

.toggle-button {
  position: relative;
  top: 9px;
}

[class*=counter].safe {
  color: green;
}

[class*=counter].over {
  color: red;
}

.charsLeft {
  font-weight: 700;
  display: none;
  position: relative;
  top: 5px;
  left: 5px;
}

.mainContainer {
  background: rgba(77, 121, 199, 0.38);
  border-radius: 10px;
  position: relative;
  top: 50px;
  left: 18%;
  padding: 30px;
  margin-bottom: 60px;
}

.priorities {
  display: none;
}

.hexagon {
  width: 100px;
  height: 55px;
  background: red;
  position: relative;
}
.hexagon:before {
  content: "";
  position: absolute;
  top: -25px;
  left: 0;
  width: 0;
  height: 0;
  border-left: 50px solid transparent;
  border-right: 50px solid transparent;
  border-bottom: 25px solid red;
}
.hexagon:after {
  content: "";
  position: absolute;
  bottom: -25px;
  left: 0;
  width: 0;
  height: 0;
  border-left: 50px solid transparent;
  border-right: 50px solid transparent;
  border-top: 25px solid red;
}
  
ul.panelsList {
  list-style: none;
}

ul.panelsList li {
  list-style-type: none;
  position: absolute;
  float: left;
}

