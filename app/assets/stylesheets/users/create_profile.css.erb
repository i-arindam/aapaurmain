.detailsHeader {
  font-weight: 700;
  color: black;
  text-align: left;
  position: relative;
  left: -20px;
}

.imageThumbContainer {
  position: relative;
  float: left;
}

.upload{
  position: relative;
  clear: left;
}

.picUpload {
  position: relative;
  top: 50px;
  left: 20px;
  margin-right: 20px;
  border-radius: 10px;
