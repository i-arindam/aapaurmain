/* Feeds */
.feeds-container {
  margin: 61px 0 30px 50px;
}
.feeds-wrap {
  background: #f5f4f5;
  border: 1px solid #cfcfcf;
  padding: 21px 33px;
  border-radius: 3px;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
  width: 90%;
  position: relative;
  margin: 0 0 30px;
}
.feeds-box {
  width: 96%;
  height: 30px;
  background: #fff;
  padding: 7px 12px;
}
.feeds-lbl {
  color: #B3B3B3;
  font-size: 13px;
  left: 48px;
  position: absolute;
  top: 31px;
}
.feed-btns a {
  float: left;
  margin: 0 2.5%;
  width: 27.4%;
}
.btn span.active-feed {
  background-position: 7px -662px;
}
.btn span.short-feed {
  background-position: 7px -694px;
}
.btn span.loc-feed {
  background-position: 7px -725px;
}
.qa-content {
  padding: 77px 20px 0;
}
/* Feeds Ends */
textarea {
  resize: none;
}

.feeds-wrap input.post-status {
  position: relative;
  left: 36%;
  width: 190px;
  font-size: 16px;
  color: black;
  font-weight: 700;
  text-align: center;
  height: 50px;  
}
.go-or-not {
  margin: 20px 0 0 0;
  width: 99%;
}
.cancel-update {
  position: relative;
  left: 38%;
  text-decoration: none !important;
}
.panels-warning {
  padding: 10px;
  font-size: 12px;
  background: #F5F4F5;
  color: #000;
}
.info-cum-cancel {
  position: relative;
  left: 2%;
  padding: 5px;
  margin-bottom: 20px;
}

.feeds-wrap .tags a {
  background: #AAA4A4;
  color: #000;
}
.feeds-wrap .tags a.selected {
  color: #fff;
  background: #51A351;
}
