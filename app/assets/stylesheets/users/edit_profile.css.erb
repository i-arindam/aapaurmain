.mainContainer {
  background: rgba(0, 0, 0, 0.7);
  border-radius: 10px;
  padding: 59px 0 60px 37px;
  margin: 50px 0 200px 200px;
  color: white;
  width: 67%;
}

.detailsHeader {
  font-size: 16px;
  font-weight: 700;
  color: #fff;
  text-align: left;
  position: relative;
  left: -20px;
}

.imageThumbContainer {
  margin: 0 0 10px;
  position: relative;
}

.imageThumbContainer #preview {
  border-radius: 3px;
}

.upload{
  position: relative;
  clear: left;
}

.picUpload {
  position: relative;
  top: 50px;
  left: 20px;
  margin-right: 20px;
  border-radius: 10px;
  -moz-border-radius: 10px;
  -ms-border-radius: 10px;
  width: 15%;
}

.profilePicUpload {
  text-align: center;
}

.basicDetails form {
  margin: 0 0 0 49px;
}

.basicDetails table {
  width: 680px;
}

.basicDetails label {
  margin-right: 10px;
  width: 100px;
  font-size: 14px;
  font-weight: 700;
}

.basicDetails .normalInput {
  width: 190px;
}

.basicDetails .largeInput {
  width: 350px;
}
.basicDetails .blockInput {
  display: block;
  position: relative;
  left: 17%;
}
input[disabled] {
  background: rgb(196, 188, 188);
}
span.help-inline {
  color: #fff;
} 
input.blockInput + span.help-inline {
  position: relative;
  left: 17%;
}

.basicDetails input {
  padding: 10px;
  border-radius: 7px;
  -moz-border-radius: 7px;
  -ms-border-radius: 7px;
  margin-top: 7px;
}

button.saveBasicDetails {
  position: relative;
  left: 30%;
  top: 20px;
  background-color: hsl(171, 60%, 14%) !important;
  background-repeat: repeat-x;
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#94e4d8", endColorstr="#0e3932");
  background-image: -khtml-gradient(linear, left top, left bottom, from(#94e4d8), to(#0e3932));
  background-image: -moz-linear-gradient(top, #94e4d8, #0e3932);
  background-image: -ms-linear-gradient(top, #94e4d8, #0e3932);
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #94e4d8), color-stop(100%, #0e3932));
  background-image: -webkit-linear-gradient(top, #94e4d8, #0e3932);
  background-image: -o-linear-gradient(top, #94e4d8, #0e3932);
  background-image: linear-gradient(#94e4d8, #0e3932);
  border-color: #0e3932 #0e3932 hsl(171, 60%, 1%);
  color: #fff !important;
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.99);
  -webkit-font-smoothing: antialiased;
  font-weight: 700;
}
.popover {
  border-color: #000;
  border-style: inset;
}
.popover-title {
  background: #5BC6D5;
  border-color: #000;
  border-style: inset;
  border-width: 1px;
  color: #000;
  font-weight: bold;
  font-family: Arial;
  font-size: 15px;
}
.popover-content {
  color: #000;
  font-family: sans-serif;
  font-size: 14px;
}
.popover strong {
  font-weight: bold;
}
