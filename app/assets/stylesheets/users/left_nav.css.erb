/* profile */

.profile-photo {
  background: #F4F0F0;
  border: 1px solid #CFCECE;
  height: 111px;
  margin: 0 auto;
  padding: 5px;
  width: 111px;
}
.profile-photo img {
  width: 100%;
}
.user-name {
  color: #fff;
  text-align: center;
  font-size: 14px;
  margin: 8px 0 0 0;
  font-family: 'lucida_sansdemibold_roman'
}
/* Left navigation */
.left-nav {
  margin: 55px auto;
  width: 185px;
}
.left-nav-button {
  display: block;
  border: 1px solid #cacaca;
  color: #000;
  font-size: 15px;
  padding: 0;
  text-align: left;
  line-height: 16px;
  box-shadow: 1px 1px #e3e3e3;
  border-radius: 3px;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
  min-width: 183px;
}
.left-nav ul li {
  margin: 0 0 7px;
}
.btn span {
  background: url("<%= image_path 'sprite_layout.png' %>") no-repeat 4px -296px;
  padding: 8px 0 8px 37px;
  display: block;
}
.btn span.incoming-req {
  background-position: 4px -337px;
}
.btn span.outgoing-req {
  background-position: 4px -378px;
}
.btn span.people-follow {
  background-position: 4px -419px;
}
.btn span.my-followers {
  background-position: 4px -460px;
}
.btn span.top-story {
  background-position: 4px -501px;
}
/* Left navigation ends */
