.profile {
  width: 100%;
  height: 100%;
  color: whitesmoke;
}
.profileheader {
  width: 100%;
  height: 270px;
  -moz-border-radius: 10px;
  border-radius: 10px;
}

.profileImage {
  height: 150px;
  margin-top: 0px;
  margin-left:  0px;
  margin-right: 0px;

}

.profileSideNav {
width: 15%;
float: left;
height: 100%;
margin-left: 54px;
margin-top: 30px;
border-left: 1px solid grey;
}

.heading {
  font-size: 1.5em;
  font-family: 'Oregano', cursive;
  border-bottom : 2px solid #D6D6D6;
  padding: 5px;
  padding-left: 30px;
  color: #3a87ad;
}
.group {
  border-radius: 10px;
  padding-left: 10px;
  margin-top: 30px;
  width: 100%;
  background-color: #F2F2F2;
  padding: 20px;
  min-height: 230px;
}
.sideNavButtons {
  text-align: left;
  margin-left: 50px
}

div.profile span.label {
  margin-left: 20px;
  position: relative;
  bottom: 5px;
}



.badge {
  font-size: 11px;
  letter-spacing: 0.5px;
  font-family: 'Oregano', cursive;
  font-weight: bold;
  line-height: 40px;
  color: #ffffff;
  vertical-align: baseline;
  white-space: nowrap;
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
  padding: 10px;
  -moz-border-radius-topleft: 0;
  -moz-border-radius-bottomleft: 0;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
}

.badge-left {
  font-size: 11px;
  font-weight: bold;
  line-height: 40px;
  color: #000;
  vertical-align: baseline;
  white-space: nowrap;
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
  padding: 10px;
  -moz-border-radius-topleft: 10px;
  -moz-border-radius-bottomleft: 10px;
  border-top-left-radius: 10px;
  border-bottom-left-radius: 10px;
  background-color: #D6D6D6;
}
.group.col .values {
  margin-top: 50px;
  margin-left: 50px;
}
.span4 {
  padding-top: 11px;
}
.span2 {
  padding-top: 11px;
}

.leftCol {
  float: left;
  margin-left: -50px;
}

.rightCol {
  float: left;
  width: 103%;
}

.group.col {
  background: rgba(37, 25, 8, 0.84);
  border-radius: 10px;
  height: 100%;
  margin: 20px;
  -moz-box-shadow: 9px 9px 9px rgba(0,0,0,0.2);
  box-shadow: 9px 9px 9px rgba(0,0,0,0.4);
  -webkit-transition: all 0.5s ease-out;
  -moz-transition: all 0.5s ease;
  -o-transition: all 0.5s ease;
}

.group.col:hover {
  opacity: 1;
  border: 5px solid #eee;
  -webkit-box-reflect: below 0px -webkit-gradient(linear, left top, left bottom, from(transparent), color-stop(0.7, transparent), to(rgba(0,0,0,0.4)));
  -webkit-box-shadow: 0px 0px 20px rgba(255,255,255,0.8);
  -moz-box-shadow: 0px 0px 20px rgba(255,255,255,0.8);
  box-shadow: 0px 0px 20px rgba(255,255,255,0.8);
  height: 100%;
  margin-left: -50px;
}

.lcol1:hover, .rcol2:hover {
  -webkit-transform: rotate(-7deg);
  -moz-transform: rotate(-7deg);
  -o-transform: rotate(-7deg);
}

.lcol2:hover, .rcol1:hover {
  -webkit-transform: rotate(7deg);
  -moz-transform: rotate(7deg);
  -o-transform: rotate(7deg);
}

#box_content {
  background: inherit;
}

.row label.span2 {
  font-family: 'Oregano' cursive;
}
