/* slider */
.slider-box {
  border-radius: 5px;
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
  padding: 15px;
  background: #f0f0f0;
}
.user-box, .user-inform, .text-blk {
  float: left;
}
.blg-tit {
  font-size: 12px;
  color: #4e4b4a;
}
.blg-ct {
  color: #7c7c7c;
  font-size: 11px;
}
.user-box img {
  width: 100% !important;
  height: auto !important;
}
.box-contents {
  width: 19%;
  margin: 0 2% 0 0;
  float: left;
}
.user-box {
  background: #fff;
  border: 1px solid #c3c3c3;
  padding: 10px 13px 20px;
  border-radius: 5px;
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
  width: 73%;
  height: 120px
}
.box-contents:after {
  content: ".";
  display: block;
  clear: both;
  visibility: hidden;
  line-height: 0;
  height: 0;
}
.user-inform {
  width: 40%;
  margin: 118px 0 0;
  text-align: center;
}
.user-inform p {
  color: #262626;
  font-size: 13px;
  font-family: 'lucida_sansdemibold_roman';
}
.blog-box, .text-blk {
  padding:1em;
  -moz-box-shadow:5px 5px 7px rgba(33,33,33,1);
  -webkit-box-shadow: 5px 5px 7px rgba(33,33,33,.7);
  box-shadow: 5px 5px 7px rgba(33,33,33,.7);
  min-height: 60%;
  -moz-transition:-moz-transform .15s linear;
  -o-transition:-o-transform .15s linear;
  -webkit-transition:-webkit-transform .15s linear;  
}
.blog-box:hover, .text-blk:hover {
  -moz-box-shadow:10px 10px 7px rgba(0,0,0,.7);
  -webkit-box-shadow: 10px 10px 7px rgba(0,0,0,.7);
  box-shadow:10px 10px 7px rgba(0,0,0,.7);
  -webkit-transform: scale(1.25);
  -moz-transform: scale(1.25);
  -o-transform: scale(1.25);
  position:relative;
  z-index:5;  
}
.blog-box {
  width: 28%;
  float: right;
  position: relative;
  right: 20px;
  background: #ccf;
  padding-left: 25px;
  -o-transform:rotate(6deg);
  -webkit-transform:rotate(6deg);
  -moz-transform:rotate(6deg);  
}
.text-blk {
  margin: 0 0 0 3%;
  position: absolute;
  display: inline;
  left: 20%;
  background: #cfc;
  width: 30%;
  -webkit-transform:rotate(-6deg);
  -o-transform:rotate(-6deg);
  -moz-transform:rotate(-6deg);
}
.profile-bg {
  position: absolute;
  top: -1px;
  left: 26px;
  width: 89px;
  padding: 30px 16px 13px 8px;
  background: url("<%= image_path 'users/profile-bg.png' %>") no-repeat;
}
.text-blk p {
  font-family: Georgia, serif;
  font-size: 18px;
  font-style: italic;
  margin: 0.25em 0;
  padding: 0.25em 40px;
  line-height: 1.45;
  position: relative;
  color: #383838;  
}
.text-blk p:before {
  display: block;
  content: "\201C";
  font-size: 80px;
  position: absolute;
  left: -5px;
  top: -20px;
  color: #7a7a7a;
}
.blog-box h3 {
  color: #4e4b4a;
  font-size: 14px;
  font-family: 'lucida_sansdemibold_roman';
  text-transform: uppercase;
  position: relative;
  top: 20px;
}
.blog-box ul {
  font-family: lucida_sansregular, Arial, Helvetica, sans-serif;
  position: relative;
  padding: 10px;
  margin-bottom: 10px;
}
.blog-box ul li {
  padding: 7px 4px;
  border-bottom: 1px solid #ccccc6;
  font-family: 'lucida_sansdemibold_roman';
  font-size: 14px;
}
.blog-box ul li.last {
  border: none;
}
.blg-tit {
  font-size: 14px;
  color: #4e4b4a;
}
.blg-ct {
  color: #7c7c7c;
  font-size: 13px;
  padding-top: 10px;
}
.basic-details {
  top: 20px;
}
.btn-wraper {
  margin: 20px 0 0 0;
}
.button {
  display: block;
  border-right: 1px solid #edecec;
  border-bottom: 1px solid #edecec;
  color: #fff;
  font-size: 12px;
  font-family: 'lucida_sansdemibold_roman';
  box-shadow: 1px 1px #b6b6b6;
  border-radius: 1px;
  -moz-border-radius: 1px;
  -webkit-border-radius: 1px;
  background: #8f8c89;
}
.button:hover {
  color: #fff;
}
.btn-wraper a {
  float: left;
  margin: 0 13px 0 0;
  width: auto;
  padding-right: 10px;
}
.send-req, .follow-user, .rate-profile {
  background: url("<%= image_path 'sprite_layout.png' %>") no-repeat 9px -200px;
  display: block;
  padding: 8px 0 8px 28px;
}
.follow-user {
  background-position: 9px -230px;
  padding-left: 40px;
}
.rate-profile {
  background-position: 4px -260px;
  padding-left: 34px;
}
.star {
  position: relative;
  left: 41%;
  top: 10px;
  display: none;
}
.rate-hint {
  position: relative;
  left: 42%;
  top: 10px;
  display: none;
}
.ratings {
  position: relative;
  top: 7px;
  font-size: 14px;
  display: none;
}
.rs-slider .star img{
  width: 28px;
  height: 28px;
  display: inline;
}
/* slider ends */
