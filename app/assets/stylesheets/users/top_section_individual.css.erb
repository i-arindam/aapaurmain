
/* Profile individual */
.individual-pro {
  border: 1px solid #9D9D99;
  position: relative;
  border-radius: 5px;
  box-shadow: 0 0 15px 0 #B7B5B6;
  padding: 15px;
  background: #F0F0F0;
  margin: 61px 0 55px;
}
.box-lt {
  float: left;
  margin: 0 3% 0 0;
  width: 64%;
}
.box-rt {
  width: 33%;
  float: left;
}
.blg-tit {
  font-size: 14px;
  color: #4e4b4a;
}
.blg-ct {
  color: #7c7c7c;
  font-size: 13px;
  padding-top: 10px;
}
.basic-details {
  padding-top: 20px;
}
.blog-lt h3 {
  color: #4E4B4A;
  font-family: 'lucida_sansdemibold_roman';
  font-size: 14px;
  text-transform: uppercase;
}
.blog-lt ul li {
  border-bottom: 1px solid #CCCCC6;
  padding: 7px 4px;
}
.blog-lt ul li.last {
  border: medium none;
}
.prof-txt {
  margin: 0 0 0 166px;
}
.prof-txt p {
  color: #4E4B4A;
  font-size: 13px;
  font-style: italic;
}
.prof-name {
  margin: 170px 0 0;
  text-align: center;
  width: 136px;
  float: left;
}
.prof-name p {
  color: #262626;
  font-family: 'lucida_sansdemibold_roman';
  font-size: 15px;
}
.profile-bg-large {
  background: url("<%= image_path 'users/profile-bg-large.png' %>") no-repeat;
  height: 114px;
  left: 26px;
  padding: 62px 18px 13px 12px;
  position: absolute;
  top: -3px;
  width: 114px;
}
.btn-wraper a.last {
  margin: 0;
}
.btn-wraper a.btn {
  float: left;
  margin: 0 13px 0 0;
  width: 136px;
  min-width: 136px;
}
.req-button, .follow-user, .rate-profile {
  background: url("<%= image_path 'sprite_layout.png' %>") no-repeat 9px -200px;
  display: block;
  padding: 8px 0 8px 28px;
}
.follow-user {
  background-position: 9px -230px;
  padding-left: 40px;
}
.rate-profile {
  background-position: 4px -260px;
  padding-left: 34px;
}
/* Profile individual ends */
