<% content_for :js_footer do %>
  <%= javascript_include_tag "http://js.pusher.com/1.12/pusher.min.js" %>
  <%= javascript_include_tag "chat/chat" %>
<% end %>
<% content_for :stylesheet do %>
  <%= stylesheet_link_tag 'chat/chat'%>
<% end %>

<div class="chatWrapper">
  <div id="chatBox" class="chat">
    <h2>Say Hi</h2>
      <ul id="chat" class="chatMessages"></ul>
  </div>

  <div id="controls">
    <h2>You're logged in as <em><%= current_user.name %></em></h2>
    <form action="/chat" id="message" method="POST" class="form-search">
      <input name="text" placeholder="Say something" class="input-large search-query">
      <button type="submit" value="Send" class="btn btn-primary">Send</button>
    </form>
  </div>

  <div id="presence"></div>
</div>