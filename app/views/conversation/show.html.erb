<% content_for :stylesheet do %>
  <%= stylesheet_link_tag 'conversation' %>
<% end %>
<% content_for :js_footer do %>
  <%= javascript_include_tag 'application-conversation' %>
<% end %>

<div class="span8 conversation">
  <h3>Conversations with <span class="person"><%= @with_user.name %></span></h3>
  <hl></hl>
  <ul class="messages">
    <% @messages.each do |mes| %>
      <% with_name = @with_user.name
         myname = @current_user.name
         myid = @current_user.id
         with_id = @with_user.id
      %>
      <li class="messageContainer <%= (mes.from ==  myid ? 'myColor' : 'yourColor') %>">
        <img src="http://placehold.it/96x96" />
        <div class="info">
          <span class="name"><%= (mes.from == myid ? myname : with_name) %></span>
          <span class="time pull-right"><%= mes.created_at.strftime("%d %b '%y") %></span>
        </div>
        <span class="text"><%= mes.text %></span>
      </li>
    <% end %>
  </ul>
  
  <div class="newMessage">
    <form method="post">
      <fieldset>
        <textarea name="message[text]" rows="4" cols="40"></textarea>
        <input type="hidden" class="convId" value="<%= @conversation.id %>" />
        <input type="submit" value="Say what you feel like?"/>
      </fieldset>
    </form>
  </div>
</div>