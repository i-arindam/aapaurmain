<div class="header clearfix">
  <div class="logo">
    <h1><a href="/"><img src="/assets/logo.png" alt="Purplerock" /></a></h1>
  </div>
  <div class="nav clearfix">
    <ul>
      <li>
        <a href="/dashboard">Dashboard</a>
      </li>
      <li>
        <a href="/about">About us</a>
      </li>
      <li>
        <a href="/howitworks">How it works</a>
      </li>
      <li>
        <a href="/faq">Faq</a>
      </li>
      <li class="last">
        <a href="/contact">Talk to us</a>
      </li>
    </ul>
  </div>
  <div class="info-right">
    <ul class="clearfix">
      <% unless show_login? %>
      <li>
        <a href="#" class="dropdown-toggle link-profile" data-toggle="dropdown"><img src="/assets/user-xsmall.png" /><span><%= current_user.name %></span></a>
      </li>
      <li class="separator">
        &nbsp;
      </li>
      <li>
        <div class="message">
          <span class="msg-count">2</span>
        </div>
      </li>
      <li class="separator">
        &nbsp;
      </li>
      <li>
        <a href="#" class="link-setting">Settings</a>
      </li>
      <% else %>
        <%= form_tag(sessions_path, :class => 'form-horizontal form-inline pull-right login-form') do %>
          <div class="controls">
            <input type="text" class="inputFields" id="inputIcon" name="email" placeholder="Email" />
            <input type="password" class="inputFields" name="password" placeholder="Password" />
            <button type="submit" class="signin btn btn-success">Log in</button>
          </div>
          <div class="rememberSection">
            <input name="remember_me" type="checkbox">
            <label class="checkbox">Remember me</label>
          </div>
          <div class="forgotPasswordSection">
            <p><%= link_to "Forgot Password?", new_password_reset_path %></p>
          </div>
        <% end %> <!-- end for form -->
      <% end %>
    </ul>
  </div>
</div><!-- Header -->
