<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a href="/" id="logo"></a>
      <% unless show_search? %>
        <form class="navbar-search pull-left" method="get" action="/search/keyword_search">
          <input name="searchfrom" type="hidden" value="header">
          <input class="search-query search-bar" name="q" id="search_query_top" type="text" placeholder="Fire off keywords like Guitar, Music, Painter&hellip;"  autocomplete="off">
          <div class="suggestionContainer"></div>
          <button type='button' class="btn-large btn-primary advSearch">Help Me Search</button>
        </form>
      <% end %>
        
      <nav>
          <% if show_login? %>
            <%= form_tag(sessions_path, :class => 'form-horizontal form-inline pull-right') do %>
              <div class="control-group">
                <div class="controls">
                  <input type="text" class="inputFields" id="inputIcon" name="email" placeholder="Email" />
                  <input type="password" class="inputFields" name="password" placeholder="Password" />
                  <button type="submit" class="signin">Log in</button>
                </div>
              </div>
              <div class="rememberSection">
                <input name="remember_me" type="checkbox">
                <label class="checkbox">Remember me</label>
              </div>
            <% end %> <!-- end for form -->
          <% else %>
          <% if current_user %> 
          <% user = current_user %>
          <ul class="nav nav-pills nav-actions">
            <li><!-- <a href="#">Dashboard</a> --><%= link_to "Dashboard", user %></li>
            <li><%= link_to "Edit Profile",  :controller => "users", :action => "update", :id => user.id %></li>
            <li><%= link_to "Messages", conversations_path %></li>
          </ul>

            <ul class="nav nav-dropdown">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %><b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Log out", logout_path %></li>
                </ul>
              </li>
            </ul>
            <% end %>
          <% end %>
      </nav>
    </div>
  </div>

      <!-- <a href="/" id="logo"></a> -->
</header>