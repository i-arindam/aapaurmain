<% content_for :stylesheet do %>
  <%= stylesheet_link_tag "search/advanced_search" %>
<% end %>

<div class="span4 leftSearchBar">
  <div class="advancedSearch">
    <form method="post" action="/search/advanced_search">
      <fieldset>
        <span class="searchLabel">Hobbies</span>
        <input class="searchFilters" type="text" name="search[pref_hobbies]" />
        <i class="icon-question-sign" rel="tooltip" data-original-title="Enter comma separated values for hobbies that excite you"></i>
        
        <span class="searchLabel">Specifically Interested in?</span>
        <div class="btn-group searchFilters">
          <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
            Select one ?
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <% profession_list.each do |prof| %>
              <li><a href="#" data-value="<%= prof %>"><%= prof %></a></li>
            <% end %>
          </ul>
          <i class="icon-question-sign" rel="tooltip" data-original-title="Any specific profession you are eagerly looking for?"></i>
          <input type="hidden" name="search[pref_profession]">
        </div>
        
        <span class="searchLabel">Comfortable with relocation</span>
        <div class="btn-group searchFilters">
          <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
            Select one ?
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <% relocate_list.each do |key, value| %>
              <li><a href="#" data-value="<%= key %>"><%= value %></a></li>
            <% end %>
          </ul>
          <i class="icon-question-sign" rel="tooltip" data-original-title="Looking for someone who is willing to change his/her current city"></i>
          <input type="hidden" name="search[pref_relocate]">
        </div>
        
        <span class="searchLabel">City</span>
        <input type="text" class="searchFilters" name="search[pref_location]" />
        <i class="icon-question-sign" rel="tooltip" data-original-title="Which city you want your partner to be in?"></i>
        
        <span class="searchLabel">Spouse Preference</span>
        <div class="btn-group searchFilters">
          <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
            Select one ?
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <% spouse_pref_list.each do |key, value| %>
              <li><a href="#" data-value="<%= key %>"><%= value %></a></li>
            <% end %>
          </ul>
          <i class="icon-question-sign" rel="tooltip" data-original-title="Looking for someone with this kind of preference for spouse"></i>
          <input type="hidden" name="search[pref_spouse_preference]">
        </div>
        
        <span class="searchLabel">Ideal Marriage</span>
        <input type="text" name="search[pref_ideal_marriage]" />
        <i class="icon-question-sign" rel="tooltip" data-original-title="Your definition of ideal marriage should be applied to search results?"></i>
        
        
        <span class="searchLabel">Opinion on virginity</span>
        <div class="btn-group searchFilters">
          <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
            Select one ?
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <% virginity_opinion_list.each do |key, value| %>
              <li><a href="#" data-value="<%= key %>"><%= value %></a></li>
            <% end %>
          </ul>
          <i class="icon-question-sign" rel="tooltip" data-original-title="What should your partner's reaction be to this question"></i>
          <input type="hidden" name="search[pref_virginity_opinion]">
        </div>
        
        <span class="searchLabel">Sex of your partner</span>
        <label class="radio">
          <input type="radio" name="search[pref_sex]" value="male" <%= user.sex == 'female' ? 'checked' : ''%>>
          Female
        </label>
        <label class="radio">
          <input type="radio" name="search[pref_sex]" value="female" <%= user.sex == 'male' ? 'checked' : ''%>>
          Male
        </label>
        <i class="icon-question-sign" rel="tooltip" data-original-title="We also allow same sex marriage. Selecting same-sex will search for people who are interested in same-sex marriages themselves"></i>
        
        <span class="searchLabel">Education of your partner</span>
        <input type="text" class="searchFilters" name="search[pref_education]" />
        <i class="icon-question-sign" rel="tooltip" data-original-title="Specify this to limit your searches based on education of your partner"></i>
        
        <span class="searchLabel">Further education plans</span>
        <div class="btn-group searchFilters">
          <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
            Select one ?
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <% further_education_list.each do |key, value| %>
              <li><a href="#" data-value="<%= key %>"><%= value %></a></li>
            <% end %>
          </ul>
          <i class="icon-question-sign" rel="tooltip" data-original-title="What should your partner's opinion be on your plans for further education"></i>
          <input type="hidden" name="search[pref_further_education]">
        </div>
        
        <span class="searchLabel">Family preference</span>
        <div class="btn-group searchFilters">
          <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
            Select one ?
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <% family_preference_list.each do |key, value| %>
              <li><a href="#" data-value="<%= key %>"><%= value %></a></li>
            <% end %>
          </ul>
          <i class="icon-question-sign" rel="tooltip" data-original-title="What should your partner's preference be for family"></i>
          <input type="hidden" name="search[pref_family_preference]">
        </div>
        
        <input type="submit" value="Show me some great results!" class="btn btn-xlarge btn-success" />
        
      </fieldset>
    </form>
  </div>
</div>