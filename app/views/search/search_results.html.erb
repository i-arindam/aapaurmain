<% content_for :stylesheet do %>
  <%= stylesheet_link_tag "application-search" %>
<% end %>
<% content_for :javascript do %>
  <%= javascript_include_tag "application-search" %>
<% end %>

<% if @show_nothing %>
Nothing to display 
<% else %>

<%= render :partial => 'advanced_search', :locals => { :user => @current_user } %>

<div class="span12 mainContent page-center">
  <div class="searchResults">
    <ul class="searchList">
      <% @users.each do |user| %>
      <li class="select-thumbnails">
        <a href="#">
          <img src="/users/96x96.gif">
          <h3 class="name"><%= user.name %></h3>
        </a>
      </li>
      <% end %>
    </ul>
  </div>

  <h3 class="span6 requestLabel">Viewer Pane</h3>	
  <%= render :partial => 'users/viewer_pane', :locals => { :user_collection => @users} %>

</div>


<% end %>
