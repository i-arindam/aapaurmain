<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN">
<html>
  <head>
    <% content_for :head do %>
      <title>Aap Aur Main: Destination for perfect matches</title>
      <script src="/assets/booklet/jquery-ui-1.8.21.custom.min.js" type="text/javascript"></script>
      <script src="/assets/booklet/jquery.easing.1.3.js" type="text/javascript"></script>
      <script src="/assets/booklet/jquery.booklet.1.4.0.min.js" type="text/javascript"></script>
      <script src="/assets/homepage/jquery.validate.min.js" type="text/javascript"></script>
      <link href="/assets/booklet/jquery.booklet.1.4.0.css" type="text/css" rel="stylesheet" media="screen, projection, tv" />
      <% content_for :stylesheet do %>
        <%= stylesheet_link_tag "homepage/homepage" %>
      <% end %>

      <meta property="og:title" content="Aap Aur Main: Destination for perfect matches" />
      <meta property="og:type" content="website" />
      <meta property="og:url" content="http://www.facebook.com/indianmarriages" />
      <meta property="og:image" content="http://www.aapaurmain.com/assets/logo-chota.png" />
      <meta property="og:site_name" content="AapAurMain" />
      <meta property="fb:admins" content="100003611317733" />
    <% end %>
  </head>
  <script type="text/javascript">
    $(document).ready(function() {
      $('a.close').click(function(e) {
        e.preventDefault();
        $(this).parent().toggle('slow');
      });
      
      $('.signup form').validate({
        submitHandler: function(form) {
          $(form).ajaxSubmit();
        }, rules: {
          name: {
            required: true,
            minlength: 4
          },
          email: {
            required: true,
            email: true
          },
          conditions: "required",
          password: {
            required: true,
            minlength: 5
          },
          password_confirmation: {
            required: true,
            equalTo: '.signup form input[name=password]'
          }
        },
        messages: {
          name: {
            required: "We need a name to know you",
            minlength: "At least 4 characters is a normal name"
          },
          email: {
            required: "This is where verification mail will be sent",
            email: "This should be like name@domain.com"
          },
          password: {
            required: "This is for your own safety",
            minlength: "Give a strong password, at least 5 letters strong"
          },
          password_confirmation: {
            required: "Confirm password please",
            equalTo: "Passwords must match"
          },
          conditions: "Accept policies please"
        }
      });
    });
  </script>
  <body>
    <div id="fb-root"></div>
    
    <%= render :partial => 'static_pages/alerts' %>
    <!-- sign up-->
    <% if @user && @user.errors.any? %>
      <div class="signupError alert alert-error">
        <a class="close">&times;</a>
        <h2>Form is invalid</h2>
        <ul>
          <li>Email can't be blank</li>
          <li>Password can't be blank</li>
          <li>Password confirm should match with password</li>
        </ul>
      </div>
    <% end %>

    <div class="signup">
      <%= form_tag({:controller => 'users', :action => 'signup'}, :class=> 'pull-right', :id => 'signup_form') do %>
        <div class="control-group">
          <div class="joinus">Join Us</div>
          <div class="controls">
            <div class="input-prepend">
              <span class="add-on"><i class="icon-user"></i></span>
              <input class="span3" type="text" name="name" placeholder="Name" />
            </div>
            <div class="input-prepend">
              <span class="add-on"><i class="icon-envelope"></i></span>
              <input class="span3" type="text" name="email" placeholder="Email" />
            </div>
            <div class="input-prepend">
              <span class="add-on"><i class="icon-lock"></i></span>
              <input class="span3" type="password" name="password" placeholder="Password" />
            </div>
            <div class="input-prepend">
              <span class="add-on"><i class="icon-refresh"></i></span>
              <input type="password" class="span3" name="password_confirmation" placeholder="Password Confirm" />
            </div>
            <div class="conditions">
              <label>
                <input name="conditions" type="checkbox" />I agree to the <a href="/tnc">Terms &amp; Conditions</a> and <a href="/privacy">Privacy Policy</a>.
              </label>
            </div>
            <button type="submit" class="signupBtn"></button>
          </div>
        </div>
      <% end %>
      <div>
        <%= image_tag "cutie.png"%>
      </div>
    </div><!--signup ends-->
    
    <!-- Main talking area -->
    <div class="container">
      <ul class="socialActions public-only hide">
        <li class="social-fb">
         <div class="fb-like" data-href="http://www.facebook.com/indianmarriages" data-send="false" data-layout="box_count" data-width="450" data-show-faces="false" data-colorscheme="light"></div>                           
        </li>
         <li class="social-tw">
              <a href="https://twitter.com/share" class="twitter-share-button" data-url="" data-text=""  data-via="aapaurmain" rel="nofollow" data-count="vertical">Tweet</a>
          </li>
          <li class="social-li">
