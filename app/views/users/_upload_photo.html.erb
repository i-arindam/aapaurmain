<%= javascript_include_tag "users/upload_photo", "users/ajax_upload" %>
<div class="alert alert-success" id="successMsg" style="display:none;"><span></span><a href="#" class="close" title="Close this notification">&times;</a></div>
 
<div class="profilePicUpload">
  <div class="imageThumbContainer">
    <%= image_tag profile_pic_url(@user.id.to_s), :style=>"height:150px,width:150px" , :id=>"preview" %>
  </div>
  <div class="upload">
    <p>
    Select an image file on your computer.
    Supported formats:&nbsp;jpg, png, gif.
    Maximum size:&nbsp;4MB
    Tip: For best results use a square image (150 X 150 pixels)
  </p>

    <% if @user.photo_exists %>
      <div class="btn btn-info" id="deletePhoto">Delete</div>
    <% else %>
      <div class="btn btn-info hide" id="deletePhoto">Delete</div>
    <% end %>
    <div class="btn btn-danger" id="upload_placeholder"></div>
    <%=image_tag "indicator.gif",:id=>"indicator",:style=>"display:none;",:class=>"indicator"%>
  </div>
</div>

