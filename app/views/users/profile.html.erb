<!DOCTYPE html>
<html>
  <head>
    <% content_for :head do %>
      <title>This is <%= @user.name%></title>
    <% end %>
    <% content_for :stylesheet do%>
      <%= stylesheet_link_tag "users/profile", "right_bar", "users/left_nav" %>
    <% end %>
    <%= content_for :js_footer do %>
      <%= javascript_include_tag "users/profile" %>
    <% end %>
    <script type="text/javascript">
      $(function() {
        var requestActions = new RequestActions();
      });
    </script>
  </head>
  <body>
    <div class="container clearfix">
      <div class="row-fluid">
        <div class="span9 clearfix">
          <div class="col-one">
            <%= render :partial => "users/left_nav", :locals => { :user => @current_user } %>
          </div>
          <div class="col-two">
            <div class="center-container">
              <%= render :partial => "users/top_section_individual", :locals => { :user => @user, :request => @request } %>
              <ul class="blog-container">
                <% @stories.each do |story| %>
                <%= render :partial => "/story", :locals => { :story => story } %>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
        <!-- center content ends -->

        <!-- right content -->
        <div class="span3">
          <div class="rit-content">
            <div class="board-wrap">
              <div class="tit-wrap">
                <h2><span class="board-tit">Panels</span></h2>
              </div>
              <%= render :partial => "/panels", :locals => { :panels_info => @panels } %>
            </div>

            <div class="qa-wrap">
              <div class="new-label"><img src="/assets/users/new.png" alt="new" />
              </div>
              <div class="tit-wrap">
                <h2><span class="board-tit">Q &amp; A</span></h2>
              </div>
              <ul class="questions">
              <%= render :partial => "/questions", :locals => { :questions => @questions } %>
              </ul>
            </div>
          </div>
        </div>

      </div>
    </div><!-- Container -->

  </body>
</html>
